# Handle line endings automatically
* text=auto

# Explicitly normalize certain types
*.sh   text eol=lf
*.py   text eol=lf
*.rb   text eol=lf
*.js   text eol=lf
*.ts   text eol=lf
*.java text eol=lf
*.c    text eol=lf
*.cpp  text eol=lf
*.h    text eol=lf
*.md   text eol=lf

# Windows-specific scripts
*.bat  text eol=crlf
*.cmd  text eol=crlf

# Binary files (donâ€™t mess with line endings)
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.ico  binary
*.pdf  binary
*.zip  binary
*.gz   binary
*.tar  binary
*.jar  binary
